{
  "name": "@soundworks/plugin-scripting",
  "version": "1.0.1",
  "description": "soundworks service for managing and editing shared scripts at runtime",
  "authors": [
    "Benjamin Matuszewski"
  ],
  "license": "BSD-3-Clause",
  "type": "module",
  "exports": {
    "./client.js": "./src/client/plugin-scripting.js",
    "./server.js": "./src/server/plugin-scripting.js"
  },
  "scripts": {
    "clean": "rm -Rf client && rm -Rf server && rm -Rf common",
    "toc": "markdown-toc -i README.md",
    "api": "jsdoc-to-readme --src src/**/*.js",
    "prepublishOnly": "npm run build",
    "build": "npm run toc && npm run clean && babel src --out-dir .",
    "dev": "npm run build && chokidar src/ -c \"babel src --out-dir .\""
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/collective-soundworks/soundworks-plugin-scripting"
  },
  "dependencies": {
    "@ircam/sc-utils": "^1.0.1",
    "@soundworks/plugin-filesystem": "^2.0.0-alpha.1",
    "esbuild": "^0.18.2",
    "slugify": "^1.4.5"
  },
  "devDependencies": {
    "jsdoc-to-readme": "^1.1.0",
    "markdown-toc": "^1.2.0"
  }
}
