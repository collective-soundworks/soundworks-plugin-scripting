{
  "name": "@soundworks/plugin-scripting",
  "version": "2.0.0-alpha.1",
  "description": "soundworks plugin for managing and editing shared scripts at runtime",
  "authors": [
    "Benjamin Matuszewski"
  ],
  "license": "BSD-3-Clause",
  "type": "module",
  "exports": {
    "./client.js": {
      "module": "./src/PluginScriptingClient.js",
      "node": "./src/PluginScriptingClient.js",
      "types": "./types/PluginScriptingClient.d.ts"
    },
    "./server.js": {
      "module": "./src/PluginScriptingServer.js",
      "node": "./src/PluginScriptingServer.js",
      "types": "./types/PluginScriptingServer.d.ts"
    },
    "./components/sw-plugin-scripting.js": "./components/sw-plugin-scripting.js"
  },
  "scripts": {
    "api": "jsdoc-to-readme --src src/*.js",
    "preversion": "npm run api && npm run toc && git commit -am 'docs: build' --allow-empty",
    "test": "mocha",
    "toc": "markdown-toc -i README.md --maxdepth 3",
    "types": "rm -rf types && tsc"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/collective-soundworks/soundworks-plugin-scripting"
  },
  "bugs": {
    "url": "https://github.com/collective-soundworks/soundworks-plugin-scripting/issues"
  },
  "homepage": "https://soundworks.dev",
  "dependencies": {
    "@ircam/sc-utils": "^1.8.0",
    "@soundworks/plugin-filesystem": "^2.0.0-alpha.7",
    "convert-source-map": "^2.0.0",
    "esbuild": "^0.23.0",
    "normalize-path": "^3.0.0",
    "source-map": "^0.7.4",
    "stacktrace-parser": "^0.1.10"
  },
  "devDependencies": {
    "@soundworks/core": "^4.0.0-alpha.7",
    "chai": "^5.1.1",
    "jsdoc-to-readme": "^1.0.0",
    "markdown-toc": "^1.2.0",
    "mocha": "^10.2.0",
    "typescript": "^5.5.4"
  },
  "peerDependencies": {
    "@ircam/sc-components": "^3.0.0-alpha.78",
    "lit": "^3.1.4"
  }
}
